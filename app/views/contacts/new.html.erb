<% provide(:title, "Reservations | ") %>

<div id="reserve_background">

  <div class="container form_box">
    <h1 class="content">Request a table reservation</h1>
    <p class="content">Minimum guests: 8</p>

      <%= form_for(Contact.new) do |f| %>
        <%= render 'shared/error_messages' %>

          <%= f.text_field :name, placeholder: "Name*",
                            class: 'form-control, input_box' %>

          <%= f.email_field :email, placeholder: "Email*",
                            class: 'form-control, input_box'  %>

          <%= f.text_field :phone, placeholder: "Phone*",
                            class: 'form-control, input_box' %>

          <%= f.number_field :guests, placeholder: "Number of Guests*",
                            class: 'form-control, input_box' %>

            <%= f.text_field :date, placeholder: "Date*",
                              class: 'form-control' %>

            <%= f.time_field :time %>

          <%= f.hidden_field :size, :value => "Table"  %>

          <%= f.submit "Request", class: "btn btn-primary" %>
      <% end %>

    <br>
    <p>*required</p>

  </div>
</div>
