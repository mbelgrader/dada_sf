<% provide(:title, "Gallery | ") %>


<div class="container content">
    <h2>Gallery</h2>


  <div class="container" style="width:50%">
    <%= form_for (@photo), url: photos_path, html: { multipart: true } do |f| %>

        <%= f.file_field :image %>

        <%= f.submit "Add Photo", class: "btn btn-primary" %>

    <% end %>
  </div>

  <div class="imageRow" style="padding-top:20px">
      <div class="single">
          <% @photos.each do |photo| %>
            <%= link_to image_path(photo.image, :rel=>"lightbox", :title=>"my caption") do %>
                <%= image_tag photo.image.url(:medium) %>
            <% end %>
          <% end %>
      </div>
  </div>

</div>
